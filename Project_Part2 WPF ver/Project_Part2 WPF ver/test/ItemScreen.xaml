            </WrapPanel>
            <WrapPanel Height="140" Width="140">
                <Rectangle Fill="#FFF4F4F5" Height="100" Stroke="Black" Width="100" Margin="20,0"/>
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Width="140" TextAlignment="Center" Margin="0,10" Height="30"/>
            </WrapPanel>
            <WrapPanel Height="140" Width="140">
                <Rectangle Fill="#FFF4F4F5" Height="100" Stroke="Black" Width="100" Margin="20,0"/>
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Width="140" TextAlignment="Center" Margin="0,10" Height="30"/>
            </WrapPanel>
            <WrapPanel Height="140" Width="140">
                <Rectangle Fill="#FFF4F4F5" Height="100" Stroke="Black" Width="100" Margin="20,0"/>
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Width="140" TextAlignment="Center" Margin="0,10" Height="30"/>
            </WrapPanel>
            <WrapPanel Height="140" Width="140">
                <Rectangle Fill="#FFF4F4F5" Height="100" Stroke="Black" Width="100" Margin="20,0"/>
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Width="140" TextAlignment="Center" Margin="0,10" Height="30"/>
            </WrapPanel>
            <WrapPanel Height="140" Width="140">
                <Rectangle Fill="#FFF4F4F5" Height="100" Stroke="Black" Width="100" Margin="20,0"/>
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Width="140" TextAlignment="Center" Margin="0,10" Height="30"/>
            </WrapPanel>
            <WrapPanel Height="140" Width="140">
                <Rectangle Fill="#FFF4F4F5" Height="100" Stroke="Black" Width="100" Margin="20,0"/>
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Width="140" TextAlignment="Center" Margin="0,10" Height="30"/>
            </WrapPanel>

        </WrapPanel>
        <WrapPanel x:Name="PokeOperator" HorizontalAlignment="Left" Height="30" Margin="35,380,0,0" VerticalAlignment="Top" Width="560">
            <Button x:Name="HealButton" Content="Heal" Width="75" Margin="85,0,0,0" Height="22"/>
            <Button x:Name="UpButton" Content="Level Up" Width="75" Margin="30,0,0,0" Height="22"/>
            <Button x:Name="EvolveButton" Content="Evolve" Width="75" Margin="30,0,0,0" Height="22"/>
            <Button x:Name="SellButton" Content="Sell" Width="75" Margin="30,0,0,0" Height="22"/>
        </WrapPanel>
